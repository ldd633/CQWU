        <div class="col-sm-9 new_list">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">学校新闻
                        <div class="pull-right">当前位置：
                            <a href="#">首页 \ </a><a href="#" class="active">学校新闻</a>
                        </div>
                    </h3>
                </div>
                <div class="panel-body">
                    <ul id="list" class="media-list">
                        <%
                            var str = '';
                            rs.data.forEach(function (el) {
                                if (el.title.length>25) el.title = el.title.substr(0,24)+'...';
                                el.date = el.date.getFullYear()+'-'+(el.date.getMonth()+1)+'-'+(el.date.getDate()+1);
                                str+=`
                                    <li class="media">
                                        <a href="/users/detail?id=${el['id']}">
                                            <img class="media-object pull-left" src="/${el['imgpath']}">
                                            <div class="media-body">
                                                <h4 class="media-heading">${el['title']}
                                                    <span class="pull-right hidden-xs">${el['date']}</span>
                                                </h4>
                                                <div>${el['content']}</div>
                                            </div>
                                        </a>
                                    </li>`
                            })
 %>
                        <%-str%>
                    </ul>
                </div>
                <div class="page text-center">
                    <ul class="pagination" id="ctrl">
                        <%
                            // var curPage = 0;
                            console.log(rs)
                            str = `
                                <li data-page="home" class=""><a href="/users/list/0">&laquo;首页</a></li>
                                <li data-page="prev" class=""><a href="/users/list/${curPage-1}">&lt;上一页</a></li>
                                <li data-page="next" class=""><a href="/users/list/${curPage+1}">下一页&gt;</a></li>
                                <li data-page="last" class=""><a href="/users/list/${rs.totalPages-1}">尾页&raquo;</a></li>
                                <li class="disabled">
                                    <a href="##" id="show_info">${parseInt(curPage+1)}/${rs.totalPages}</a>
                                </li>
                            `;
 %>
                        <%-str%>

                    </ul>
